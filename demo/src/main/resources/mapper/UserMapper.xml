<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.board.demo.mapper.UserMapper">
	<!-- 유저리스트 쿼리 -->
    <select id="findAll" resultType="com.example.board.demo.model.User">
        SELECT * FROM Usertable
    </select>
    
    <!-- 회원가입 쿼리 -->
    <insert id="insert" parameterType="com.example.board.demo.model.User">
        INSERT INTO Usertable (userId, userPw, userName, userEmail)
        VALUES (#{userId}, #{userPw}, #{userName}, #{userEmail})
    </insert>
    
    <!-- ID로 사용자 조회 쿼리 -->
    <select id="findById" parameterType="com.example.board.demo.model.User" resultType="com.example.board.demo.model.User">
        SELECT * FROM Usertable WHERE userId = #{userId}
    </select>
    
    <!-- 회원 업데이트 쿼리 -->
    <update id="update" parameterType="com.example.board.demo.model.User">
        UPDATE Usertable SET userId = #{userId}, userPw = #{userPw}, userName = #{userName}, userEmail = #{userEmail}
        WHERE userId = #{userId}
    </update>

</mapper>
